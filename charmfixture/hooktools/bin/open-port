#!/usr/bin/python3

import os
import sys


class PortTool():

    @classmethod
    def path(cls):
        return os.path.join(os.environ["CHARM_DIR"], ".open-port.data")

    def run(self, args):
        with open(self.path(), "w") as fd:
            fd.write(args[0])

tool = PortTool()
tool.run(sys.argv[1:])
